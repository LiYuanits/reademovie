/* pages/movies/movie-detail/movie-detail.wxss */
@import "../stars/stars-template.wxss";
.container{
  display: flex;
  flex-direction: column;
}
.head-img{
  width:100%;
  height: 320rpx;
  /* 背景模糊 */
  -webkit-filter:blur(20px);
}

.head-img-hover{
  position: absolute;
  width: 100%;
  height: 320rpx;
  top:0;
  left:0;
  display: flex;
  flex-direction: column;
}
.main-title{
  font-size: 19px;
  color:#fff;
  font-weight: bold;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
}
.sub-title{
  font-size:28rpx;
  color:#fff;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.like{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.highlight-font{
  color:#f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.plain-font{
  color:#666;
  font-size: 22rpx;
  margin-right: 30rpx;
}
.movie-img{
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}
.summary{
  margin-left: 40rpx;
  margin-top: 40rpx;
  color:#777777;
}
.original-title{
  color:#1f3463;
  font-size:24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.flex-row{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}
.mark{
  margin-right: 30rpx;
  /* 让文字不能换行 */
  white-space: nowrap;
  color: #999999;
}
.hr{
  margin-top: 45rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}
.synopsis{
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
}
.summary-content{
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;

 
}
.cast{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 51rpx;
}
.cast-font{
  color: #999;
  margin-bottom: 40rpx;
}
.cast-imgs{
  /* 不让图片换行 */
   white-space: normal;
}
.cast-container{
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}
.cast-img{
  width: 170rpx;
  height: 210rpx;
}
.cast-name{
  margin: 10rpx auto 0;
  word-break: break-all;
}
.synopsis-font{
  color: #999;
}
